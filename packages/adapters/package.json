{
  "name": "@rapidjs.org/adapters",
  "version": "0.1.0",
  "author": "Thassilo Martin Schiepanski",
  "main": "./build/mod.js",
  "types": "./types/mod.d.ts",
  "files": [
    "./build",
    "./types"
  ],
  "scripts": {
    "clean": "rm -rf ./build && rm -rf ./types",
    "build": "npm run clean && npx tsc",
    "test:node": "npx rjs-test unit ./test/node",
    "test:deno": "deno test --allow-read --unstable-sloppy-imports ./test/deno",
    "test": "npm run test:node && npm run test:deno",
    "lint": "deno lint",
    "format": "deno fmt"
  },
  "devDependencies": {
    "@rapidjs.org/testing": "0.x",
    "@rapidjs.org/testing-unit": "0.x",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
